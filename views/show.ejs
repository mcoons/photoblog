<% include ./partials/header %>

<div class="ui main text container segment shadowed">

    <div class="ui huge header"><%= blog.title %></div>
    <div class="ui top attached>   
        <div class="item"> 
            <img class="ui centered rounded image shadowed" src="<%= blog.image %>" alt="">
            <div class="content">
                <span><%= blog.created.toDateString() %></span>

            </div>
            <div class="description ui segment">
                    <p><%- blog.body %></p> 

            </div>
            <a class="ui floated basic greenbutton shadowed" href="/blogs/<%=blog._id %>/edit">Edit</a>
            <form id="delete" method="POST" action="/blogs/<%=blog._id %>?_method=DELETE">
                <button class="redbutton shadowed">
                    Delete
                </button>

            </form>
        </div>
    </div>
</div>
<br><br><br>
<% include ./partials/footer %>